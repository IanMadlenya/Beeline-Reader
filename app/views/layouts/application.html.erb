<!DOCTYPE html>
<html>
<head>
  <title>Beelinereader</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="beeline_main" >
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= image_tag("readfaster.gif") %>
		<div class="slogan">
			Read Faster with
			Beeline Reader
		</div>
	</div>
	<div id="columns">
		<div id="side">
			<ul>
				<li><%= link_to 'Home', root_url %></li>
				<li><%= link_to 'Try It', root_url+'reads/new' %></li> 
			</ul>
			<a href="http://twitter.com/share" class="twitter-share-button" data-count="none" data-via="BeeLineReader">Tweet</a>
			<script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
			<%= facebook_like %>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
